</nav>

<body>

<div class="bg-1">
  <h3> Pending request</h3>

  <div>
       <table class = "table table-hover table-dark">
            <thead>
             <tr>
               <th class ="col-sm-4">ICO Name</th>
               <th class ="col-sm-2">ICO Symbol</th>
               <th class ="col-sm-4">Release date</th>
               
               <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
              <% @ico.each do |ico| %>
                <% @websites.each do |unique| %>
                  <% if ico.website == unique && ico.status == "Pending" %>
                  <tr>
                    <td ><%= ico.ico_name %></td>
                    <td ><%= ico.symbol %></td>
                    <td ><%= ico.release_date %></td>
                     <td><%= link_to 'Review', user_review_path(@ico, :id => ico.id)  %></td>       
                  </tr>
                 <% end %>
              <% end %>
            </tbody>
            <% end %>
      </table>  
  </div>
</div>
</body>
